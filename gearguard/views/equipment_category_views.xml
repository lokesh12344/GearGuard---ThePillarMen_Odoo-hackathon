<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ======================= -->
    <!-- EQUIPMENT CATEGORY VIEWS -->
    <!-- ======================= -->

    <!-- Form View -->
    <record id="equipment_category_view_form" model="ir.ui.view">
        <field name="name">equipment.category.form</field>
        <field name="model">equipment.category</field>
        <field name="arch" type="xml">
            <form string="Equipment Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(gearguard.action_maintenance_equipment)d" 
                                type="action"
                                class="oe_stat_button" 
                                icon="fa-cogs"
                                context="{'search_default_category_id': active_id}">
                            <field name="equipment_count" widget="statinfo" string="Equipment"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                            invisible="active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Category Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Add a description..."/>
                        </page>
                        <page string="Equipment" name="equipment">
                            <field name="equipment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="serial_number"/>
                                    <field name="department_id"/>
                                    <field name="location"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="equipment_category_view_tree" model="ir.ui.view">
        <field name="name">equipment.category.tree</field>
        <field name="model">equipment.category</field>
        <field name="arch" type="xml">
            <tree string="Equipment Categories">
                <field name="name"/>
                <field name="equipment_count" string="# Equipment"/>
                <field name="description" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="equipment_category_view_kanban" model="ir.ui.view">
        <field name="name">equipment.category.kanban</field>
        <field name="model">equipment.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="equipment_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge rounded-pill">
                                        <i class="fa fa-cogs"/> <field name="equipment_count"/> Equipment
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="equipment_category_view_search" model="ir.ui.view">
        <field name="name">equipment.category.search</field>
        <field name="model">equipment.category</field>
        <field name="arch" type="xml">
            <search string="Search Categories">
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_equipment_category" model="ir.actions.act_window">
        <field name="name">Equipment Categories</field>
        <field name="res_model">equipment.category</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first equipment category
            </p>
            <p>
                Categories help organize equipment by type (e.g., CNC Machines, Laptops, Vehicles).
            </p>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ======================= -->
    <!-- MAINTENANCE EQUIPMENT   -->
    <!-- ======================= -->

    <!-- Form View -->
    <record id="maintenance_equipment_view_form" model="ir.ui.view">
        <field name="name">maintenance.equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <header>
                    <button name="action_create_request" 
                            string="Create Request" 
                            type="object" 
                            class="oe_highlight"
                            invisible="is_scrap"/>
                    <button name="action_mark_scrap" 
                            string="Mark as Scrap" 
                            type="object" 
                            class="btn-secondary"
                            confirm="Are you sure you want to mark this equipment as scrap? This action cannot be undone."
                            invisible="is_scrap"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_maintenance_requests" 
                                type="object"
                                class="oe_stat_button" 
                                icon="fa-wrench">
                            <field name="maintenance_count" widget="statinfo" string="Requests"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="SCRAPPED" bg_color="bg-danger" 
                            invisible="not is_scrap"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-secondary" 
                            invisible="active"/>
                    <field name="image" widget="image" class="oe_avatar" 
                           options="{'preview_image': 'image'}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Equipment Name..."/>
                        </h1>
                        <h3>
                            <field name="serial_number" placeholder="Serial Number..."/>
                        </h3>
                    </div>
                    <group>
                        <group string="Classification">
                            <field name="category_id"/>
                            <field name="location"/>
                        </group>
                        <group string="Ownership">
                            <field name="department_id"/>
                            <field name="employee_id" 
                                   domain="[('department_id', '=?', department_id)]"/>
                            <field name="owner_user_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Maintenance Responsibility">
                            <field name="team_id"/>
                            <field name="technician_id" 
                                   domain="[('id', 'in', team_member_ids)]"/>
                            <field name="team_member_ids" invisible="1"/>
                        </group>
                        <group string="Purchase &amp; Warranty">
                            <field name="purchase_date"/>
                            <field name="warranty_expiry"/>
                            <field name="warranty_status" widget="badge" 
                                   decoration-success="warranty_status == 'valid'"
                                   decoration-danger="warranty_status == 'expired'"
                                   decoration-muted="warranty_status == 'none'"/>
                            <field name="cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" 
                                   invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status">
                            <field name="is_scrap"/>
                            <field name="scrap_date" invisible="not is_scrap"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes about this equipment..."/>
                        </page>
                        <page string="Maintenance History" name="maintenance">
                            <field name="request_ids" readonly="1">
                                <tree decoration-danger="is_overdue" 
                                      decoration-success="state == 'repaired'"
                                      decoration-muted="state == 'scrap'">
                                    <field name="name"/>
                                    <field name="request_type" widget="badge"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'new'"
                                           decoration-warning="state == 'in_progress'"
                                           decoration-success="state == 'repaired'"
                                           decoration-danger="state == 'scrap'"/>
                                    <field name="technician_id" widget="many2one_avatar_user"/>
                                    <field name="scheduled_date"/>
                                    <field name="duration" widget="float_time"/>
                                    <field name="is_overdue" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="maintenance_equipment_view_tree" model="ir.ui.view">
        <field name="name">maintenance.equipment.tree</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipment" 
                  decoration-danger="is_scrap" 
                  decoration-warning="warranty_status == 'expired'">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="department_id" optional="show"/>
                <field name="employee_id" optional="hide"/>
                <field name="team_id"/>
                <field name="location" optional="hide"/>
                <field name="warranty_status" widget="badge"
                       decoration-success="warranty_status == 'valid'"
                       decoration-danger="warranty_status == 'expired'"
                       decoration-muted="warranty_status == 'none'" optional="show"/>
                <field name="maintenance_count" string="Requests"/>
                <field name="is_scrap" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="maintenance_equipment_view_kanban" model="ir.ui.view">
        <field name="name">maintenance.equipment.kanban</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="team_id"/>
                <field name="maintenance_count"/>
                <field name="warranty_status"/>
                <field name="is_scrap"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click #{record.is_scrap.raw_value ? 'bg-danger-subtle' : ''}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span class="o_kanban_record_subtitle text-muted">
                                        <field name="serial_number"/>
                                    </span>
                                </div>
                                <div class="o_dropdown_kanban dropdown" t-if="!record.is_scrap.raw_value">
                                    <a class="dropdown-toggle o-no-caret btn" 
                                       data-bs-toggle="dropdown" href="#">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a name="action_create_request" type="object" 
                                           class="dropdown-item">Create Request</a>
                                        <a name="action_mark_scrap" type="object" 
                                           class="dropdown-item text-danger">Mark as Scrap</a>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div t-if="record.category_id.value">
                                    <i class="fa fa-tag text-muted"/> <field name="category_id"/>
                                </div>
                                <div t-if="record.department_id.value">
                                    <i class="fa fa-building text-muted"/> <field name="department_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge rounded-pill" 
                                          t-att-class="record.warranty_status.raw_value == 'valid' ? 'bg-success' : (record.warranty_status.raw_value == 'expired' ? 'bg-danger' : 'bg-secondary')">
                                        <field name="warranty_status"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span class="badge rounded-pill bg-primary" t-if="record.maintenance_count.raw_value > 0">
                                        <i class="fa fa-wrench"/> <field name="maintenance_count"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="maintenance_equipment_view_search" model="ir.ui.view">
        <field name="name">maintenance.equipment.search</field>
        <field name="model">maintenance.equipment</field>
        <field name="arch" type="xml">
            <search string="Search Equipment">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="team_id"/>
                <field name="technician_id"/>
                <field name="location"/>
                <separator/>
                <filter string="My Equipment" name="my_equipment" 
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter string="My Team's Equipment" name="my_team_equipment" 
                        domain="[('team_id.member_ids', 'in', uid)]"/>
                <separator/>
                <filter string="Under Warranty" name="under_warranty" 
                        domain="[('warranty_status', '=', 'valid')]"/>
                <filter string="Warranty Expired" name="warranty_expired" 
                        domain="[('warranty_status', '=', 'expired')]"/>
                <separator/>
                <filter string="Has Open Requests" name="has_requests" 
                        domain="[('maintenance_count', '>', 0)]"/>
                <separator/>
                <filter string="Scrapped" name="scrapped" 
                        domain="[('is_scrap', '=', True)]"/>
                <filter string="Archived" name="inactive" 
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" 
                            context="{'group_by': 'category_id'}"/>
                    <filter string="Department" name="group_department" 
                            context="{'group_by': 'department_id'}"/>
                    <filter string="Team" name="group_team" 
                            context="{'group_by': 'team_id'}"/>
                    <filter string="Warranty Status" name="group_warranty" 
                            context="{'group_by': 'warranty_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_maintenance_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">maintenance.equipment</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_group_category': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first equipment
            </p>
            <p>
                Track all company assets: machines, vehicles, computers, and more.
                Assign maintenance teams and monitor warranty status.
            </p>
        </field>
    </record>

</odoo>

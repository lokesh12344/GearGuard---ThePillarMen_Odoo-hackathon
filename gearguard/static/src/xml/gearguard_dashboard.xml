<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- GearGuard Dashboard Template -->
    <t t-name="gearguard.Dashboard">
        <div class="o_action gearguard_dashboard">
            <div class="container-fluid py-4">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="mb-1">
                            <i class="fa fa-tachometer text-primary me-2"/>
                            GearGuard Dashboard
                        </h2>
                        <p class="text-muted mb-0">Real-time maintenance overview</p>
                    </div>
                </div>

                <!-- Loading State -->
                <div t-if="state.loading" class="text-center py-5">
                    <div class="gearguard_loading mb-3"></div>
                    <p class="text-muted">Loading statistics...</p>
                </div>

                <!-- Stats Cards -->
                <div t-else="" class="row g-4">
                    <!-- Equipment Card -->
                    <div class="col-md-6 col-lg-3">
                        <div class="gearguard_stat_card h-100" t-on-click="openEquipment" style="cursor: pointer;">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="stat_value" t-esc="state.activeEquipment"/>
                                    <div class="stat_label">Active Equipment</div>
                                </div>
                                <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                    <i class="fa fa-cogs fa-2x text-primary"/>
                                </div>
                            </div>
                            <div class="mt-3 small text-muted">
                                <span class="text-danger" t-if="state.scrappedEquipment > 0">
                                    <i class="fa fa-trash me-1"/>
                                    <t t-esc="state.scrappedEquipment"/> scrapped
                                </span>
                                <span t-else="" class="text-success">
                                    <i class="fa fa-check me-1"/> All equipment active
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- New Requests Card -->
                    <div class="col-md-6 col-lg-3">
                        <div class="gearguard_stat_card h-100" t-on-click="openNewRequests" style="cursor: pointer;">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="stat_value text-info" t-esc="state.newRequests"/>
                                    <div class="stat_label">New Requests</div>
                                </div>
                                <div class="rounded-circle bg-info bg-opacity-10 p-3">
                                    <i class="fa fa-plus-circle fa-2x text-info"/>
                                </div>
                            </div>
                            <div class="mt-3 small text-muted">
                                <i class="fa fa-clock-o me-1"/>
                                Waiting for assignment
                            </div>
                        </div>
                    </div>

                    <!-- In Progress Card -->
                    <div class="col-md-6 col-lg-3">
                        <div class="gearguard_stat_card h-100">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="stat_value text-warning" t-esc="state.inProgressRequests"/>
                                    <div class="stat_label">In Progress</div>
                                </div>
                                <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                                    <i class="fa fa-wrench fa-2x text-warning"/>
                                </div>
                            </div>
                            <div class="mt-3 small text-muted">
                                <i class="fa fa-user-circle me-1"/>
                                Being worked on
                            </div>
                        </div>
                    </div>

                    <!-- Overdue Card -->
                    <div class="col-md-6 col-lg-3">
                        <div class="gearguard_stat_card h-100" 
                             t-att-class="state.overdueRequests > 0 ? 'border-danger border-2' : ''"
                             t-on-click="openOverdueRequests" 
                             style="cursor: pointer;">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div t-att-class="'stat_value ' + (state.overdueRequests > 0 ? 'text-danger' : 'text-success')" 
                                         t-esc="state.overdueRequests"/>
                                    <div class="stat_label">Overdue</div>
                                </div>
                                <div t-att-class="'rounded-circle p-3 ' + (state.overdueRequests > 0 ? 'bg-danger bg-opacity-10' : 'bg-success bg-opacity-10')">
                                    <i t-att-class="'fa fa-2x ' + (state.overdueRequests > 0 ? 'fa-exclamation-triangle text-danger' : 'fa-check-circle text-success')"/>
                                </div>
                            </div>
                            <div class="mt-3 small">
                                <span t-if="state.overdueRequests > 0" class="text-danger fw-bold">
                                    <i class="fa fa-warning me-1"/> Requires attention!
                                </span>
                                <span t-else="" class="text-success">
                                    <i class="fa fa-thumbs-up me-1"/> All on schedule
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mt-4" t-if="!state.loading">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fa fa-bolt me-2"/>Quick Actions
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <button class="btn btn-outline-primary w-100 py-3" t-on-click="openNewRequests">
                                            <i class="fa fa-plus-circle me-2"/>
                                            New Maintenance Request
                                        </button>
                                    </div>
                                    <div class="col-md-4">
                                        <button class="btn btn-outline-secondary w-100 py-3" t-on-click="openEquipment">
                                            <i class="fa fa-cogs me-2"/>
                                            Manage Equipment
                                        </button>
                                    </div>
                                    <div class="col-md-4">
                                        <button class="btn btn-outline-danger w-100 py-3" t-on-click="openOverdueRequests">
                                            <i class="fa fa-exclamation-triangle me-2"/>
                                            View Overdue (<t t-esc="state.overdueRequests"/>)
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Summary Row -->
                <div class="row mt-4" t-if="!state.loading">
                    <div class="col-12">
                        <div class="alert alert-light border">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <strong class="d-block h4 mb-0" t-esc="state.totalEquipment"/>
                                    <small class="text-muted">Total Equipment</small>
                                </div>
                                <div class="col-md-3">
                                    <strong class="d-block h4 mb-0" t-esc="state.totalRequests"/>
                                    <small class="text-muted">Total Requests</small>
                                </div>
                                <div class="col-md-3">
                                    <strong class="d-block h4 mb-0 text-success" t-esc="state.activeEquipment"/>
                                    <small class="text-muted">Equipment Active</small>
                                </div>
                                <div class="col-md-3">
                                    <strong class="d-block h4 mb-0 text-danger" t-esc="state.scrappedEquipment"/>
                                    <small class="text-muted">Equipment Scrapped</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
